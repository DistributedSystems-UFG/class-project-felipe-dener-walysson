<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login_Label"
        android:layout_width="173dp"
        android:layout_height="51dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="16dp"
        android:text="IOT"
        android:textColor="#2196F3"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Temperatura_Label"
        android:layout_width="151dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:text="Temperatura"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Red_Led_Label"
        android:layout_width="167dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:text="Led Vermelho"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Green_Led_Label"
        android:layout_width="167dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="236dp"
        android:text="Led Verde"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EditTextTemperatura"
        android:layout_width="91dp"
        android:layout_height="38dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="88dp"
        android:text="00.00"
        android:textColor="#F44336"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/RedLedToggle"
        android:layout_width="83dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/Red_Led_Label"
        app:layout_constraintTop_toBottomOf="@+id/EditTextTemperatura" />

    <ToggleButton
        android:id="@+id/GreenLedToggle"
        android:layout_width="83dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:text="ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/Green_Led_Label"
        app:layout_constraintTop_toBottomOf="@+id/EditTextTemperatura" />

    <TextView
        android:id="@+id/LedStateText"
        android:layout_width="327dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:textColor="#ED1414"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/PresentationBtn"
        android:layout_width="281dp"
        android:layout_height="46dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="356dp"
        android:backgroundTint="#FF5722"
        android:checked="false"
        android:text="ToggleButton"
        android:textColor="#FFFFFF"
        android:textOff="APRESENTAÇÂO(WEB)"
        android:textOn="FECHAR APRESENTAÇÂO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>